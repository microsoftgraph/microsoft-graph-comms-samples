<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace"
      internalLogFile="C:\Users\sasthana\ServiceLogs\log.txt"
      throwExceptions="false">

	<variable name="appName" value="AudioVideoPlaybackService" />

	<targets>
		<target name="logfile" xsi:type="File" fileName="${basedir}/MyLogs/${date:format=yyyy-MM-dd}-service.log" />
		<target name="eventlog" xsi:type="EventLog" layout="${message}" log="Application" source="AudioVideoPlaybackServiceEvents" />
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="logfile" />
		<logger name="*" minlevel="Trace" writeTo="eventlog" />
	</rules>
</nlog>
